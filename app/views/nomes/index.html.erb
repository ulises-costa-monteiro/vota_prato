<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nomes.each do |nome| %>
  <tr>
    <td><%= nome.nome %></td>
    <td><%= link_to 'Show', nome %></td>
    <td><%= link_to 'Edit', edit_nome_path(nome) %></td>
